<%- include('common/header', {title: 'Логін'}); -%>
<main class="login">
  <div style="min-width: 350px;">
    <h1><i class="fa-solid fa-right-to-bracket"></i> Вхід</h1>
    <% if (error) { %>
      <p class="error"><%= error %></p>
    <% } %>
    <form action="/login" method="post">
      <section>
          <label for="email">Пошта</label>
          <input id="email" name="email" type="email" autocomplete="off" required autofocus>
      </section>
      <section>
          <label for="current-password">Пароль</label>
          <input id="current-password" name="password" type="password" autocomplete="off" required>
      </section>
      <button style="width:100%" class="button button-primary" type="submit">Вхід</button>
    </form>
  </div>
</main>
<%- include('common/footer'); -%>
